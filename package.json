{
  "name": "node-typescript-api",
  "version": "1.0.0",
  "description": "API built using Node.js, Typescript and TDD.",
  "main": "index.js",
  "scripts": {
    "build": "tsc",
    "start": "yarn build && node dist/src/index.js",
    "start:dev": "tsnd --respawn --transpile-only src/index.ts",
    "test:functional": "jest --projects ./test --runInBand",
    "lint": "eslint ./src ./test --ext .ts",
    "lint:fix": "eslint ./src ./test --ext .ts --fix"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/andre-violin/node-typescript-api.git"
  },
  "keywords": [
    "nodejs",
    "typescript",
    "tdd",
    "api"
  ],
  "author": "Andr√© Violin <andre.violin@ifms.edu.br>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/andre-violin/node-typescript-api/issues"
  },
  "homepage": "https://github.com/andre-violin/node-typescript-api#readme",
  "devDependencies": {
    "@types/express": "^4.17.14",
    "@types/jest": "^29.0.3",
    "@types/module-alias": "^2.0.1",
    "@types/node": "^18.7.18",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.38.0",
    "@typescript-eslint/parser": "^5.38.0",
    "eslint": "^8.23.1",
    "jest": "^29.0.3",
    "supertest": "^6.2.4",
    "ts-jest": "^29.0.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^4.8.3"
  },
  "dependencies": {
    "@overnightjs/core": "^1.7.6",
    "body-parser": "^1.20.0",
    "express": "^4.18.1",
    "module-alias": "^2.2.2"
  }
}
